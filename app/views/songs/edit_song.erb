<h2>Edit
    <%=@song.name%>
</h2>

<form action="/songs/<%= @song.slug %>/edit" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <h3>
        <label>New name</label>
    </h3>
    <input type="text" name="song[name]" value="<%=@song.name%>">
    <br>
    <h3>
        <label>New artist</label>
    </h3>
    <input type="text" name="song[artist]" value="<%=@song.artist.name%>">

    <input type="submit" value="submit">
</form>
